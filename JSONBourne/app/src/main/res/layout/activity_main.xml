<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.davidjensen.entvex.jsonbourne.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Push the button"
        android:id="@+id/ttvType"
        android:layout_below="@+id/llttv" android:layout_alignParentStart="true"/>

    <Button
        android:text="Get Aarhus Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetAarhusWeather"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check connectivity!"
        android:id="@+id/btnCheckConnectivity"
        android:layout_below="@+id/btnGetAarhusWeather"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Network Type"
        android:id="@+id/llttv"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ettJsonDump"
        android:layout_below="@+id/btnCheckConnectivity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp" />

    <Button
        android:text="Show stuff!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCheckConnectivity"
        android:layout_alignStart="@+id/btnGetAarhusWeather"
        android:layout_marginTop="13dp"
        android:id="@+id/btnJSON"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
