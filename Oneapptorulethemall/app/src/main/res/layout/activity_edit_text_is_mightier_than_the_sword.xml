<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="info.davidjensen.entvex.oneapptorulethemall.EditTextIsMightierThanTheSword">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edtEmail" android:layout_above="@+id/edtNumber"
            android:layout_alignStart="@+id/edtNumber"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtNumber"
            android:layout_above="@+id/edtPassword" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPassword" android:layout_centerVertical="true"
            android:layout_alignStart="@+id/edtNumber"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/ll1"
            android:layout_marginEnd="55dp" android:layout_alignTop="@+id/edtEmail"
            android:layout_toStartOf="@+id/edtEmail"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number"
            android:id="@+id/ll2"
            android:layout_alignTop="@+id/edtNumber" android:layout_alignStart="@+id/ll1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/ll3"
            android:layout_below="@+id/edtNumber" android:layout_alignStart="@+id/ll2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/btnOK_sword"
            android:layout_below="@+id/edtPassword" android:layout_toEndOf="@+id/ll2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancel_sword" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
</RelativeLayout>
